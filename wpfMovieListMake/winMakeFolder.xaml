<Window x:Class="wpfMovieListMake.winMakeFolder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner"
        Title="winMakeFolder" Height="167" Width="467">
    <Grid Width="438">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Content="Label" Height="24" HorizontalAlignment="Left" Margin="0,0,0,0" Name="label1" VerticalAlignment="Top" />
        <TextBox Height="21" HorizontalAlignment="Left" Margin="5,0,0,0" Name="txtFolderName" VerticalAlignment="Top" Width="439" Grid.Row="2" />
        <Button Content="作成実行" Height="37" HorizontalAlignment="Center" Margin="0,0,0,0" Name="btnMakeExecute" VerticalAlignment="Top" Width="126" Grid.Row="3" Click="btnMakeExecute_Click" />
        <CheckBox Content="フルパスをテキストとしてコピーする" Grid.Row="1" Height="21" HorizontalAlignment="Left" Margin="10,6,0,0" Name="chkCopyFilePathText" VerticalAlignment="Top" Width="199" IsChecked="True" />
    </Grid>
</Window>
